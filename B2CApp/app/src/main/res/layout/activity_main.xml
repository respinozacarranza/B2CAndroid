<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".WelcomeB2C">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >





    <ImageView
        android:id="@+id/imview1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/houseicon"

        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/titulo"
        android:layout_toStartOf="@+id/titulo" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/appNombre"
        android:textSize="80dp"

        android:id="@+id/titulo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </TextView>

    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/l1"

        android:layout_above="@+id/l2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageButton"
            android:layout_gravity="center_vertical"
            android:src="@drawable/but2"
            android:background="@drawable/ripple"
            android:layout_marginLeft="25dp"

            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageButton2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/but2"
            android:background="@drawable/ripple"
            android:layout_marginLeft="60dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageButton3"
            android:layout_gravity="center_vertical"
            android:src="@drawable/but2"
            android:background="@drawable/ripple"
            android:layout_marginLeft="75dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/l2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inmueble"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:layout_marginLeft="40dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerca de mi"
            android:layout_marginLeft="50dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/l2">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/opcion2"
        android:id="@+id/conect"
        android:layout_gravity="center"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/butconnect"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/opcion2"
        android:id="@+id/reg"
        android:layout_gravity="center"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/butregister"
        android:scaleType="fitCenter"
        />

    </LinearLayout>



</RelativeLayout>
