<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarEmpresa$ModificarPersonaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ModEmp_et_RazonSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Razon Social"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="35dp"/>

                <EditText
                    android:id="@+id/ModEmp_et_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/ModEmp_et_RUC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RUC"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/ModEmp_et_Direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Direccion"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/ModEmp_et_Web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pagina Web"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/ModEmp_et_Usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Usuario"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="70dp"/>


                <EditText
                    android:id="@+id/ModEmp_et_Contrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contrasena"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/ModEmp_btn_mod"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Modificar"
                    android:background="@color/accent_material_dark"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</FrameLayout>